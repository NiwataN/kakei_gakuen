<%= form_with(model: book, local: true) do |form| %>
  <br>
  <table id="add_items">
  </table>
  <br>

  <%= form.submit class: 'btn btn-default', id: 'submit', style: 'display:none;' %>

  <% if book.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
