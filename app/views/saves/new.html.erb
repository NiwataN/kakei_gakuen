<a href="/saves/">一覧に戻る</a>
<div>
  <form action="/saves" method="post" enctype="multipart/form-data" accept-charset="UTF-8">
    <%= csrf_meta_tags %>
    <p>
      服の名前 : <input type="text" name="clothe_name" required>
    </p>
    <p>
      値段(数字で入力してね) : <input type="text" name="clothe_price" required>
    </p>
    <p>
      zindex(数字で入力してね) : <input type="text" name="clothe_priority" required>
    </p>
    <p>
      タグ : 
      <select name="tag_id">
        <% @send_tags.each{|key, tag| %>
          <option value="<%= key %>"><%= tag['tag'] %></option>
        <% } %>
      </select>
    </p>
    <p>
      写真 : <input type="file" name="clothe_image" id="clothe_image">
    </p>
    <p>
      <button type="submit" name="action" value="save">保存</button>
    </p>
  </form>
</div>